{
  "name": "fhevm-sdk-monorepo",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK - Build confidential dApps with any framework",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build:sdk",
    "build:sdk": "cd packages/fhevm-sdk && npm run build",
    "dev:nextjs": "cd examples/nextjs && npm run dev",
    "dev:research": "cd examples/research-data-sharing && npm run dev",
    "install:all": "npm install && npm run install:examples",
    "install:examples": "cd examples/nextjs && npm install && cd ../research-data-sharing && npm install",
    "test": "npm run test:sdk",
    "test:sdk": "cd packages/fhevm-sdk && npm test",
    "clean": "rm -rf node_modules packages/*/node_modules examples/*/node_modules",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "zama",
    "ethereum",
    "web3",
    "sdk",
    "privacy",
    "confidential",
    "react",
    "nextjs",
    "vue"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.50.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
